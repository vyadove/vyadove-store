{
    "name": "shopnex-starter",
    "version": "0.6.0",
    "description": "Starter for building Shopify-like storefronts using Payload CMS",
    "license": "MIT",
    "type": "module",
    "scripts": {
        "dev": "turbo run dev --filter ./apps/cms dev",
        "dev:cms": "pnpm --filter ./apps/cms dev",
        "dev:shop": "pnpm --filter ./apps/shop dev",
        "build": "turbo run build",
        "format": "prettier --write .",
        "db:seed": "pnpm --filter ./apps/cms db:seed",
        "test:e2e": "pnpm exec playwright test"
    },
    "dependencies": {
        "@payloadcms/db-sqlite": "3.49.1",
        "@payloadcms/next": "3.49.1",
        "@payloadcms/plugin-seo": "3.49.1",
        "@payloadcms/richtext-lexical": "3.49.1",
        "@payloadcms/translations": "3.49.1",
        "@payloadcms/ui": "3.49.1",
        "@shopnex/types": "workspace:^",
        "dotenv": "^17.2.1",
        "lucide-react": "^0.541.0",
        "next": "15.4.6",
        "payload": "3.49.1"
    },
    "devDependencies": {
        "@changesets/cli": "2.27.10",
        "@eslint/eslintrc": "^3.2.0",
        "@payloadcms/eslint-config": "^3.28.0",
        "@playwright/test": "^1.55.0",
        "@swc/cli": "^0.7.8",
        "@types/jsdom": "^21.1.7",
        "@types/lodash": "^4.17.16",
        "@types/node": "^22.5.4",
        "@types/react": "19.0.7",
        "@types/react-dom": "19.0.3",
        "autoprefixer": "^10.4.20",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "eslint": "^9.16.0",
        "eslint-config-next": "15.1.5",
        "postcss": "^8.5.3",
        "prettier": "^3.4.2",
        "rimraf": "^6.0.1",
        "tailwindcss": "^4.0.9",
        "turbo": "^2.5.4",
        "typescript": "5.7.3"
    },
    "engines": {
        "node": "^18.20.2 || >=20.9.0",
        "pnpm": "^9 || ^10"
    },
    "packageManager": "pnpm@10.7.1",
    "pnpm": {
        "onlyBuiltDependencies": [
            "sharp"
        ],
        "overrides": {
            "tar-fs": "^3.0.9",
            "esbuild": "^0.25.0",
            "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.2/xlsx-0.20.2.tgz",
            "react": "19.1.0",
            "react-dom": "19.1.0",
            "@types/react": "19.1.0",
            "@types/react-dom": "19.1.0",
            "lodash": "4.17.21"
        }
    }
}
