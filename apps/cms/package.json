{
    "name": "@shopnex/cms",
    "version": "1.0.3",
    "description": "A blank template to get started with Payload 3.0",
    "license": "MIT",
    "type": "module",
    "private": true,
    "scripts": {
        "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
        "ci": "cross-env NODE_OPTIONS=--no-deprecation payload migrate && next build",
        "dev": "cross-env NODE_OPTIONS=\"${NODE_OPTIONS} --no-deprecation\" next dev",
        "db:seed": "cross-env PAYLOAD_SECRET=0c2661e8291dd55114c7e89f DATABASE_URI=file:./payload-tut-2.db  tsx ./src/seed",
        "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=\"${NODE_OPTIONS} --no-deprecation next dev",
        "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
        "generate:types": "payload generate:types",
        "generate:schema": "npx  payload generate:db-schema",
        "migrate:create": "cross-env NODE_OPTIONS=--no-deprecation pnpm run generate:types && npx  payload generate:db-schema && npx payload migrate:create",
        "migrate": "cross-env NODE_OPTIONS=--no-deprecation npx  payload migrate",
        "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
        "lint:quiet": "cross-env NODE_OPTIONS=--no-deprecation next lint --quiet",
        "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
        "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
        "format": "prettier --write ."
    },
    "dependencies": {
        "@payloadcms/db-postgres": "3.49.1",
        "@payloadcms/plugin-form-builder": "3.49.1",
        "@shopnex/analytics-plugin": "0.0.4",
        "@shopnex/builder-io-plugin": "^1.0.12",
        "@shopnex/cj-plugin": "1.0.10",
        "@shopnex/easy-email-plugin": "^0.0.5",
        "@shopnex/import-export-plugin": "^3.31.3",
        "@shopnex/payload-sdk": "^3.1.7",
        "@shopnex/quick-actions-plugin": "^0.0.4",
        "@shopnex/sidebar-plugin": "0.0.2",
        "@shopnex/store-plugin": "^1.0.15",
        "@shopnex/stripe-plugin": "^3.31.10",
        "@shopnex/utils": "^1.0.6",
        "@tailwindcss/postcss": "^4.1.3",
        "@tailwindcss/typography": "^0.5.16",
        "@tiptap/extension-color": "^3.4.1",
        "@tiptap/extension-highlight": "^3.4.1",
        "@tiptap/extension-image": "^3.4.1",
        "@tiptap/extension-text-style": "^3.4.1",
        "@tiptap/react": "^3.0.9",
        "@tiptap/starter-kit": "^3.0.9",
        "axios": "^1.12.0",
        "cheerio": "^1.0.0",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "cross-env": "^7.0.3",
        "currency-codes": "^2.2.0",
        "decimal.js": "^10.5.0",
        "graphql": "^16.8.1",
        "js-cookie": "^3.0.5",
        "jsdom": "^26.0.0",
        "libsql": "^0.5.13",
        "lodash": "^4.17.21",
        "lucide-react": "^0.484.0",
        "next": "15.4.7",
        "postcss": "^8.5.4",
        "pretty": "^2.0.0",
        "rate-limiter-flexible": "^6.1.0",
        "react": "19.0.0",
        "react-dom": "19.0.0",
        "react-use-cart": "^1.14.0",
        "recharts": "^2.15.1",
        "sharp": "0.32.6",
        "slugify": "^1.6.6",
        "stripe": "^17.7.0"
    },
    "engines": {
        "node": "^18.20.2 || >=20.9.0",
        "pnpm": "^9 || ^10"
    },
    "devDependencies": {
        "@types/js-cookie": "^3.0.6",
        "@types/pretty": "^2.0.3",
        "@types/stripe": "^8.0.417",
        "dotenv": "^17.2.1",
        "tsx": "^4.20.5",
        "tw-animate-css": "^1.3.4"
    }
}
